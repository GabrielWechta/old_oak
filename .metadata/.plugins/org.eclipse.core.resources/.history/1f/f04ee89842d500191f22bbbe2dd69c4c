package com.harman;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.boot.builder.SpringApplicationBuilder;
import org.springframework.boot.web.servlet.support.SpringBootServletInitializer;

@SpringBootApplication
public class TutorialApplication implements CommandLineRunner{

	private static final Logger logger = LoggerFactory.getLogger(TutorialApplication.class);
	
	@Autowired
	StudentRepository repository;
	
    public static void main(String[] args) {
    	logger.info("++++++++++++logger in TutorialApllication started++++++++++++++++++++");
        SpringApplication.run(TutorialApplication.class, args);
        logger.info("----------logger in TutorialApllication ended----------------");
    }
    
    @Override
    public void run(String... args) throws Exception{
    	
    	System.out.println("++++++++++++++++++++++++++++++++++++++++HIBERNATE++++++++++++++++++++++++++++++++++++++++++++");
    	logger.info("Student id 1001 -> {}", repository.findById(1001L));
    	
    	logger.info("All users 1 -> {}", repository.findAll());
    	
    	//Insert
    	logger.info("Inserting -> {}", repository.save(new Student("Jaskier", "J1234657", 1005L)));

    	//Update
    	//logger.info("Update 10001 -> {}", repository.save(new Student(1001L, "Name-Updated", "New-Passport")));

    	//repository.deleteById(1002L);
    	
    	logger.info("All users 2 -> {}", repository.findAll());
    	
    	logger.info("My function -> {}", repository.averageId());
    }
}
